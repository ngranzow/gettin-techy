<div class="comments">
    {{#each this}}
    <section class="comment">
        <div class="card">
            <div class="card-content">
                <div class="meta">
                    {{user.username}} on {{format_date created_at}}
                </div>
                <div class="text">
                    {{comment_text}}
                </div>
            </div>
        </div>
    </section>
    </br>
    {{/each}}
</div>